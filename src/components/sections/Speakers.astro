---
import { speakersData } from "../../assets/data/speakersData";
---

<section class="section-card">
  <h2 class="text-xl sm:text-2xl font-bold mb-6 sm:mb-8 text-center">
    Speakers
  </h2>

  <div class="flex items-center gap-2 sm:gap-4 justify-around flex-wrap">
    {
      speakersData.map((item) => (
        <div class="">
          <img
            src={item.image.src}
            alt={item.name}
            class="w-24 md:w-32 h-24 md:h-32 rounded-full mb-4"
          />
          <h3 class="text-lg md:text-xl font-semibold mb-2">{item.name}</h3>
          <p class="text-gray-700 mb-4 text-xs sm:text-sm">{item.role}</p>
        </div>
      ))
    }
  </div>
</section>

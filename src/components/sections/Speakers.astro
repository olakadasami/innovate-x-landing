---
import { speakersData } from "../../assets/data/speakersData";
---

<section class="px-36 py-10">
  <h2 class="text-2xl font-bold mb-8 text-center">Speakers</h2>

  <div class="flex items-center gap-4 justify-around flex-wrap">
    {
      speakersData.map((item) => (
        <div class="">
          <img
            src={item.image.src}
            alt={item.name}
            class="w-32 h-32 rounded-full mb-4"
          />
          <h3 class="text-xl font-semibold mb-2">{item.name}</h3>
          <p class="text-gray-700 mb-4 text-sm">{item.role}</p>
        </div>
      ))
    }
  </div>
</section>

---
import image1 from "../../assets/images/sponsors/1.png";
const sponsorsData = [image1, image1, image1, image1];
---

<section class="px-36 py-10">
  <h2 class="text-2xl font-bold mb-8 text-center">Sponsors</h2>

  <div class="flex items-center gap-4 justify-around flex-wrap">
    {
      sponsorsData.map((item) => (
        <div class="">
          <img src={item.src} alt="Sponsor Logo" class="w-60 h-60" />
        </div>
      ))
    }
  </div>
</section>

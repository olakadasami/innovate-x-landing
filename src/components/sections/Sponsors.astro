---
import image1 from "../../assets/images/sponsors/1.png";
const sponsorsData = [image1, image1, image1, image1];
---

<section id="sponsors" class="section-card">
  <h2 class="text-xl sm:text-2xl font-bold mb-6 sm:mb-8 text-center">
    Sponsors
  </h2>

  <div class="flex items-center gap-2 sm:gap-4 justify-around flex-wrap">
    {
      sponsorsData.map((item) => (
        <div class="">
          <img
            src={item.src}
            alt="Sponsor Logo"
            class="w-24 sm:w-28 md:w-32 lg:w-60 h-24 sm:h-28 md:h-32 lg:h-60"
          />
        </div>
      ))
    }
  </div>
</section>

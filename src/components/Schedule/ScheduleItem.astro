---
interface Props {
    day: number
    activity: string
    showLine?: boolean
}

const {activity, day, showLine} = Astro.props as Props;
---

<div class="flex gap-4">
    <div>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" style="margin-right: 8px;">
        <circle cx="8" cy="8" r="8" />
        </svg>
        {showLine && (<svg width="16" height="50" viewBox="0 0 16 50" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="display: block; margin: 0 auto;">
            <line x1="4" y1="0" x2="4" y2="50" stroke="#A3A3A3" stroke-width="2" />
        </svg>)}
    </div>
    <div>
        <p class="text-lg font-medium">{activity}</p>
        <p class="text-stone-500">Day {day}</p>
    </div>
</div>
